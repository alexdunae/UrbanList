<div id="cityBody">
	<%= link_to 'Back', city_list_path(@list.city, @list)%>
		<div id="slider">
			<ul class="slides">
				<% @description.images.each do |image| %>
					<% if @first == 0 %>
						<% @first = 1 %>
						<% @imageFirst = image %>
					<% end %>
					<li class="slide"><%= image_tag(image.image_url, size: "640x400")%></li>
				<%end%>
				<li class="slide"><%= image_tag(@imageFirst.image_url, size: "640x400")%></li>
			</ul>
	    </div>
	<div class="txt-en">
		<h1><%= @description.name %></h1>
		<h2><%= @description.subtitle %></h2>

	    <% if @description.priceRange == 5 %>
			<div id="priceRange">$$$$$</div>
		<% else %>
			<% if @description.priceRange == 4 %>
				<div id="priceRange">$$$$</div>
			<% else %>
				<% if @description.priceRange == 3 %>
					<div id="priceRange">$$$</div>
				<% else %>
					<% if @description.priceRange == 2 %>
						<div id="priceRange">$$</div>
					<% else %>
						<% if @description.priceRange == 1 %>
							<div id="priceRange">$</div>
						<% else %>
							<div id="priceRange"></div>
						<% end %>
					<% end %>
				<% end %>
			<% end %>
		<% end %>
		
			<p><%= @description.detail %></p>

		<h2><%= @description.address %></h2>
		<Br/>
		<%= link_to 'Add your own image!', new_city_list_description_image_path(@list.city, @list, @description) %>
	</div>

	<div class="txt-pt">
		<h1><%= @description.name %></h1>
		<h2><%= @description.subtitulo %></h2>
		
	    <% if @description.priceRange == 5 %>
			<div id="priceRange">$$$$$</div>
		<% else %>
			<% if @description.priceRange == 4 %>
				<div id="priceRange">$$$$</div>
			<% else %>
				<% if @description.priceRange == 3 %>
					<div id="priceRange">$$$</div>
				<% else %>
					<% if @description.priceRange == 2 %>
						<div id="priceRange">$$</div>
					<% else %>
						<% if @description.priceRange == 1 %>
							<div id="priceRange">$</div>
						<% else %>
							<div id="priceRange"></div>
						<% end %>
					<% end %>
				<% end %>
			<% end %>
		<% end %>
		
			<p><%= @description.detalhe %></p>

		<h2><%= @description.address %></h2>

		<Br/>
		<%= link_to 'Adicione sua imagem!', new_city_list_description_image_path(@list.city, @list, @description) %>
	</div>


	
</div>